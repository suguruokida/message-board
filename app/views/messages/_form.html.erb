<%= form_for(@message, html: { class: "form-horizontal" }) do |f| %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <label for="message_name" class="col-sm-0 control-label">名前</label>
    <div class="col-sm-12">
      <%= f.text_field :name, class: "form-control", placeholder: "名前を入れて下さい" %>
    </div>
  </div>
  <div class="form-group">
    <label for="message_body" class="col-sm-0 control-label">内容</label>
    <div class="col-sm-12">
      <%= f.text_area :body, class: "form-control", placeholder: "内容を入れて下さい"%>
      <br>
      <%= f.submit class: "btn btn-sm btn-primary" %>
    </div>
  </div>
<% end %>